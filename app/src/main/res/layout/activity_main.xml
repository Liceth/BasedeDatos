<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:text="ID de Estudiante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FF0066"/>

    <EditText
        android:id="@+id/idEstudiante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/valIdEstudiante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"/>

    <TextView
        android:text="Nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FF0066"/>
    
    <EditText
        android:id="@+id/nombreEstudiante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/valNombreEstudiante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"/>

    <TextView
        android:text="Apellido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FF0066"/>

    <EditText
        android:id="@+id/apellidoEstudiante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/valApellidoEstudiante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"/>
    
    <Button
        android:id="@+id/guardar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:background="#FF0066"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/listar"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Listar"
        android:background="#FF0066"
        android:textColor="#FFFFFF"/>

</LinearLayout>
